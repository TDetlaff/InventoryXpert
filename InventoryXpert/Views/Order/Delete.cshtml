@model InventoryXpert.Models.Order

@{
    ViewData["Title"] = "Delete";
}

<h1>Delete</h1>

<div>
    <hr />
    <dl class="row">
        <dt class = "col-sm-2">
            Arrival Date
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.ArrivalDate)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Shipped)
        </dt>
        <dd class = "col-sm-10">
            @if (Model.Shipped == 1)
            {
                <text>Yes</text>
            }
            else
            {
                <text>No</text>
            }
        </dd>
        <dt class = "col-sm-2">
            Placed On
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.PlacedDate)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Supplier)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Supplier)
        </dd>
    </dl>
    
    <form asp-action="Delete">
        <input type="hidden" asp-for="Id" />
        <input type="submit" value="Delete" class="button btn-delete" /> |
        <a class="button btn-details" asp-action="Index">Back to List</a>
    </form>
</div>
