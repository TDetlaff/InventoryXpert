@model InventoryXpert.Models.Order

@{
    ViewData["Title"] = "Delete";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1>Delete</h1>

<div>
    <hr />
    <dl class="row">
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Shipped)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Shipped)
        </dd>
        <dt class = "col-sm-2">
            Arrival Date
        </dt>
        <dd class = "col-sm-10">
            @if (Model.ArrivalDate.HasValue)
            {
                @Model.ArrivalDate.Value.ToString("MMMM d, yyyy")
            }
            else
            {
                <span>No Arrival Date</span>
            }
        </dd>
        <dt class = "col-sm-2">
            Placed Date
        </dt>
        <dd class = "col-sm-10">
            @if (Model.PlacedDate.HasValue)
            {
                @Model.PlacedDate.Value.ToString("MMMM d, yyyy")
            }
            else
            {
                <span>No Placed Date</span>
            }
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Supplier)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Supplier.SupplierName)
        </dd>
    </dl>
    
    <form asp-action="Delete">
        <input type="hidden" asp-for="OrderId" />
        <input type="submit" value="Delete" class="button btn-delete" /> |
        <a class="button btn-details" asp-action="Index">Back to List</a>
    </form>
</div>
